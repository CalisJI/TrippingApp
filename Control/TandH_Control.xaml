<UserControl x:Class="TrippingApp.Control.TandH_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrippingApp.Control"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Width="200" Height="100">
        <Grid>
            <Rectangle Width="200" Height="100">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="1 0" EndPoint="1 1.5">
                        <GradientStop Color="Red" Offset="0.1" />
                        <GradientStop Color="Blue" Offset="0.5"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock VerticalAlignment="Top" Margin=" 10 10 0 0">
                <Run Text="Temperature:" FontWeight="DemiBold"/>
                <Run Text="{Binding NhietDo}"/>
            </TextBlock>
            <TextBlock VerticalAlignment="Bottom" Margin="10 0 0 10" >
                <Run Text="Humidity:" FontWeight="DemiBold"/>
                <Run Text="{Binding DoAm}"/>
            </TextBlock>
        </Grid>
    </Viewbox>
    
</UserControl>
