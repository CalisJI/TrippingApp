            Grid.Column="3"
            Grid.Row="1"
            Posit="8"
            Length_X="460"
            Length_Y="350"/>
            <digit:VX4_Control
            Grid.Column="0"
            Grid.Row="2"
            Posit="9"
            Length_X="460"
            Length_Y="350"/>
            <digit:VX4_Control
            Grid.Column="1"
            Grid.Row="2"
            Posit="10"
            Length_X="460"
            Length_Y="350"/>
