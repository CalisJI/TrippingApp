            Grid.Column="1"
            Grid.Row="1"
            Posit="6"
            Length_X="460"
            Length_Y="350"/>
            <digit:VX4_Control
            Grid.Column="2"
            Grid.Row="1"
            Posit="7"
            Length_X="460"
            Length_Y="350"/>
