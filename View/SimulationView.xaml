<UserControl x:Class="TrippingApp.View.SimulationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrippingApp.View"
             mc:Ignorable="d"
             xmlns:themes="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:digit ="clr-namespace:TrippingApp.Control"
             DataContext="{StaticResource VM_Simulation}"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button
                Width="100"
                Height="100">
                <themes:PackIcon Width="80" Height="80" Kind="ShieldSun"/>
            </Button>
        </Grid>
        <Grid Width="1920" Height="980" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <digit:VX4_Control
            Grid.Column="0"
            Grid.Row="0"
            Posit="1"
            Length_X="460"
            Length_Y="350"
            WriteCommand="{Binding B1_Set}"/>
            <digit:VX4_Control
            Grid.Column="1"
            Grid.Row="0"
            Posit="2"
            Length_X="460"
            Length_Y="350"/>
            <digit:VX4_Control
            Grid.Column="2"
            Grid.Row="0"
            Posit="3"
            Length_X="460"
            Length_Y="350"/>
            <digit:VX4_Control
            Grid.Column="3"
            Grid.Row="0"
            Posit="4"
            Length_X="460"
            Length_Y="350"/>
            <digit:VX4_Control
            Grid.Column="0"
            Grid.Row="1"
            Posit="5"
            Length_X="460"
            Length_Y="350"/>
